<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_enunciado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/escolha_um_numero_1_a_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <EditText
        android:id="@+id/edit_numero"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:inputType="number"
        android:maxLength="2"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_enunciado"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btn_rodar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/rodar"
        app:layout_constraintTop_toBottomOf="@+id/edit_numero"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/txt_nenhum_numero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nenhum_numero"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_rodar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txt_resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        tools:text=""
        app:layout_constraintTop_toTopOf="@+id/txt_nenhum_numero"
        app:layout_constraintStart_toEndOf="@+id/txt_nenhum_numero" />

    <TextView
        android:id="@+id/txt_titulo_numero_escolhido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/numero_escolhido"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_resultado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txt_numero_escolhido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        tools:text=""
        app:layout_constraintTop_toTopOf="@+id/txt_titulo_numero_escolhido"
        app:layout_constraintStart_toEndOf="@+id/txt_titulo_numero_escolhido" />

    <TextView
        android:id="@+id/txt_ganhou_ou_perdeu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="30dp"
        tools:text=""
        app:layout_constraintTop_toBottomOf="@+id/txt_numero_escolhido"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"  />

</androidx.constraintlayout.widget.ConstraintLayout>